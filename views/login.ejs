<%- include('./header.ejs') %>
<div class="not-logged-in" xmlns="http://www.w3.org/1999/html">
    <div class="row center-align">
        <div class="col s12">
            <div class="col s3"></div>
            <div class="col s6">
                <div class="card blue-grey darken-1">
                    <div class="card-content white-text">
                        <span class="card-title">Welcome</span>
                    </div>
                </div>
            </div>
            <div class="col s3"></div>
        </div>
    </div>
    <div class="row center-align">
        <div class="col s3"></div>
        <div class="col s6">
            <div class="row card">
                <h4>Indentifiez-vous</h4>
                <form action="/connexionLogin" method="post">
                    <div class="row">
                        <div class="col s12">
                            <div class="col s6">
                                <div class="input-field">
                                    <input type="text" id="login" name="login" placeholder="Entrez votre login" class="validate">
                                    <label for="login">Login</label>
                                </div>
                            </div>
                            <div class="col s6">
                                <div class="input-field">
                                    <input type="password" id="password" name="password" placeholder="Entrez votre mot de passe" class="validate">
                                    <label for="password">Password</label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="center-align">
                            <button class="btn waves-effect waves-light" name="action" id="button" type="submit">Valider</button>
                        </div>
                    </div>
                    <%if(isError === true){%>
                    <div class="row" id="error">
                        <div class="center-align">
                            <div class="red-text">Login ou mot de passe incorrects</div>
                        </div>
                    </div>
                    <%}%>
                </form>
            </div>
        </div>
    </div>
</div>
<%- include('./footer.ejs', {includeScript: true}) %>